{
  "compilerOptions": {
    "jsx": "preserve",
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "sourceMap": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true
  },
  "include": [
    "<% if (nuxtDir) { %><%= nuxtDir %>/<% } %>**/*.ts",
    "<% if (nuxtDir) { %><%= nuxtDir %>/<% } %>**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}
